# HackRx Multimodal RAG API Configuration
# Copy this file to .env and fill in your actual API keys

# Together AI Configuration (Primary LLM Provider)
TOGETHER_API_KEY=your_together_ai_api_key_here
TOGETHER_EMBEDDING_MODEL=BAAI/bge-large-en-v1.5
TOGETHER_CHAT_MODEL=meta-llama/Meta-Llama-3.1-8B-Instruct-Turbo
TOGETHER_VISION_MODEL=meta-llama/Llama-Vision-Free

# LlamaParse Configuration (Advanced Document Parsing)
LLAMAPARSE_API_KEY=your_llamaparse_api_key_here
LLAMAPARSE_RESULT_TYPE=markdown
LLAMAPARSE_VERBOSE=true
LLAMAPARSE_LANGUAGE=en

# Pinecone Configuration (Vector Database)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment
PINECONE_INDEX_NAME=hackrx-multimodal-rag
PINECONE_DIMENSION=1024
PINECONE_METRIC=cosine

# Authentication
BEARER_TOKEN=hackrx-secure-token-2024

# Performance Settings (Optimized for sub-30-second response)
MAX_FILE_SIZE=52428800  # 50MB
CHUNK_SIZE=512
CHUNK_OVERLAP=50
MAX_CHUNKS_PER_QUERY=8
EMBEDDING_BATCH_SIZE=32
MAX_CONCURRENT_EMBEDDINGS=10
MAX_CONCURRENT_LLM_CALLS=5

# Timeout Settings
RETRIEVAL_TIMEOUT=5.0
LLM_TIMEOUT=15.0
TOTAL_PIPELINE_TIMEOUT=28.0
PDF_PROCESSING_TIMEOUT=8.0
DOCX_PROCESSING_TIMEOUT=3.0
TABLE_EXTRACTION_TIMEOUT=5.0
VISION_PROCESSING_TIMEOUT=10.0

# Caching Settings
ENABLE_EMBEDDING_CACHE=true
CACHE_TTL=3600

# Document Processing Settings
TABLE_EXTRACTION_STRATEGY=hybrid  # pdfplumber, camelot, hybrid
ENABLE_OCR=true
OCR_CONFIDENCE_THRESHOLD=0.7
IMAGE_PREPROCESSING=true
MAX_IMAGE_SIZE=(1024, 1024)
IMAGE_QUALITY=85
ENABLE_VISION_PROCESSING=true

# OpenAI Configuration (Fallback - Optional)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=text-embedding-3-small
OPENAI_LLM_MODEL=gpt-4o-mini